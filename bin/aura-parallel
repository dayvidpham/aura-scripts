#!/usr/bin/env python3
"""aura-parallel — DEPRECATED. Use aura-swarm start --swarm-mode intree instead.

This wrapper translates aura-parallel arguments to aura-swarm equivalents
and delegates execution. It will be removed in a future release.
"""

import os
import sys


def main() -> None:
    print(
        "WARNING: aura-parallel is deprecated. "
        "Use 'aura-swarm start --swarm-mode intree' instead.",
        file=sys.stderr,
    )

    # Translate: aura-parallel <args> → aura-swarm start --swarm-mode intree <args>
    translated = ["aura-swarm", "start", "--swarm-mode", "intree"] + sys.argv[1:]

    os.execvp("aura-swarm", translated)


if __name__ == "__main__":
    main()
